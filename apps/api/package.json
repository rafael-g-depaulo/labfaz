{
  "name": "@labfaz/api",
  "version": "21.0.1",
  "description": "express.js api in typescript",
  "keywords": [
    "api",
    "server",
    "typescript"
  ],
  "author": "Rafael G. de Paulo <rafael.g.depaulo@gmail.com>",
  "homepage": "https://github.com/rafael-g-depaulo/labfaz#readme",
  "license": "ISC",
  "main": "dist/index.js",
  "typings": "dist/index.d.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rafael-g-depaulo/labfaz.git"
  },
  "scripts": {
    "start": "dotenv -- if-env NODE_ENV=production && yarn start:prod || yarn start:dev",
    "dev": "yarn start:dev",
    "prod": "yarn start:prod",
    "start:dev": "dotenv -- tsnd -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "start:prod": "dotenv -- yarn serve",
    "serve": "IS_SERVING_BUNDLE=true NODE_PATH=dist node -r tsconfig-paths/register dist/index.js",
    "build": "yarn build:server & yarn build:db",
    "build:server": "tsc --project tsconfig.prod.json",
    "build:db": "yarn db:build || yarn db:build:force",
    "clean": "rm -fr dist; rm -f .ultra.cache.json; rm -f tsconfig.tsbuildinfo",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/.bin/typeorm --config ./src/Db/config.cli",
    "test": "jest --reporters=\"default\"",
    "test:watch": "yarn test --watch",
    "watch": "yarn test:watch",
    "coverage": "yarn test --coverage",
    "report": "yarn coverage",
    "db:drop": "yarn typeorm schema:drop",
    "db:build": "yarn typeorm migration:run",
    "db:build:force": "if-env NODE_ENV=development && yarn typeorm schema:sync",
    "db:build:force:extreme": "yarn typeorm schema:sync",
    "db:reset": "yarn db:drop && yarn db:build"
  },
  "bugs": {
    "url": "https://github.com/rafael-g-depaulo/labfaz/issues"
  },
  "dependencies": {
    "@adminjs/design-system": "^2.0.1",
    "@adminjs/express": "^4.0.0",
    "@adminjs/typeorm": "^2.0.0",
    "@labfaz/adder": "^21.0.1",
    "@types/aws-sdk": "^2.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.7",
    "@types/express": "^4.17.8",
    "@types/jest": "^24.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/multer": "^1.4.7",
    "@types/nanoid": "^2.1.0",
    "@types/yup": "^0.29.13",
    "adminjs": "^5.1.0",
    "aws-sdk": "^2.973.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "dotenv-cli": "^3.2.0",
    "express": "^4.17.1",
    "express-formidable": "^1.2.0",
    "express-session": "^1.17.2",
    "if-env": "^1.0.4",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.3",
    "nanoid": "^3.1.12",
    "nodemailer": "^6.4.17",
    "pg": "^8.3.3",
    "reflect-metadata": "^0.1.13",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.25",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/plugin-proposal-decorators": "^7.12.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.8",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/supertest": "^2.0.10",
    "babel-plugin-transform-typescript-metadata": "^0.3.1",
    "jest-html-reporter": "^3.3.0",
    "jest-html-reporters": "^2.1.0",
    "jest-stare": "^2.2.0",
    "supertest": "^6.0.1"
  }
}
